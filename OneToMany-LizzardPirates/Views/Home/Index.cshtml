@{
    ViewData["Title"] = "Home Page";
}
@model Lizard

<form class="col-5 mx-auto" action="/process" method="post">
    <h3>Add pirate-lizard : </h3>
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control">
    </div>
    <span asp-validation-for="Name" class="text-danger"></span>

    <div class="form-group">
        <label asp-for="LizardType">Lizard Type:</label>
        <input asp-for="LizardType" class="form-control">
    </div>
    <span asp-validation-for="LizardType" class="text-danger"></span>

    <div class="form-group">
        <label asp-for="PirateRole">Pirate Role:</label>
        <input asp-for="PirateRole" class="form-control">
    </div>
    <span asp-validation-for="PirateRole" class="text-danger"></span>

    <div class="form-group">
        <label asp-for="TreasureChests">Treasure Chests (1-9):</label>
        <input asp-for="TreasureChests" class="form-control">
    </div>
    <span asp-validation-for="TreasureChests" class="text-danger"></span>
    <div class="text-center">
        <input type="submit" class="btn btn-danger text-center" value="ARRRRR">
    </div>
    
    
</form>