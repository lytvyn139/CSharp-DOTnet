@model Pet

<h3 class="col-5 mx-auto">Add pet for your pirates:</h3>
<form action="/create/pet" method="post">
 
    <div class="col-5 mx-auto">
        <label asp-for="Name">Name: </label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name"></span>
    </div>

    <div class="col-5 mx-auto">
        <label asp-for="Type">Type: </label>
        <input asp-for="Type" class="form-control">
        <span asp-validation-for="Type"></span>
    </div>

    <div class="col-5 mx-auto">
        <label asp-for="Color">Color: </label>
        <input asp-for="Color" class="form-control">
        <span asp-validation-for="Color"></span>
    </div>

    <div class="col-5 mx-auto mt-2">
        <label asp-for="LizardId">Owner: </label>
        <select asp-for="LizardId">
            @foreach (var l in ViewBag.Lizards)
            {
                <option value="@l.LizardId">@l.Name</option>
            }
        </select>
        <span asp-validation-for="LizardId"></span>

    </div>
    <div class="text-center">
        <input type="submit" class="btn btn-success" value="Create" >
    </div>
    


</form>