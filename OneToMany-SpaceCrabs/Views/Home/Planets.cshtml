@model List<Planet>

<table class="table table-hover">

    <thead>
        <tr>
            <th>Name</th>
            <th>System</th>
            <th>Galaxy</th>
            <th># of Inhabitants</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.System</td>
                <td>@c.Galaxy</td>
                <td>@c.Inhabitants.Count</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>
